{
    "env": {
        "browser": true,
		"jquery": true
    },
    "globals": {
		"scoreboard": false,
		"bootbox": false,
        "setupAutoComplete": false,
        "signalR": false
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}